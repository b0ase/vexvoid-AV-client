{
  "name": "v3xv0id-av-client",
  "version": "2.0.0",
  "description": "V3XV0ID AV Client - Professional Live Visual Performance Tool with Cloud-Connected Audio-Visual Sequencing",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron ./main.js",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "animation",
    "image",
    "electron",
    "effects",
    "vj",
    "performance",
    "visual",
    "audio",
    "sequencer",
    "v3xv0id",
    "cloud"
  ],
  "author": "FRESH",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@supabase/supabase-js": "^2.50.0"
  },
  "build": {
    "appId": "com.fresh.v3xv0id-av-client",
    "productName": "V3XV0ID AV Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "controls.html",
      "control-window.html",
      "supabase-config.js",
      "audio-manager.js",
      "performance-sequencer.js",
      "node_modules/**/*",
      "package.json",
      "vexvoid-icon.png"
    ],
    "icon": "vexvoid-icon.png",
    "mac": {
      "category": "public.app-category.graphics-design",
      "icon": "vexvoid-icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "vexvoid-icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "vexvoid-icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
